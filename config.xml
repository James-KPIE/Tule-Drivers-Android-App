<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.tuletaxi.kpie.Drivers" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Tule Drivers</name>
  <description>
        Tule Drivers App for mobile phone.
    </description>
  <author email="idg12009@hotmail.com" href="http://KPIE.atiittechnologycom/">
      Idowu James
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  
  <preference name="android-build-tool" value="gradle" />  
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="Orientation" value="portrait"/>
  <preference name="SplashScreenDelay" value="4000" />
  <preference name="SplashScreen" value="screen" />
  <preference name="FadeSplashScreen" value="false" />
  <preference name="BackupWebStorage" value="none"/>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
  
  <plugin spec="https://github.com/driftyco/ionic-plugins-keyboard.git#011283b" />
  <plugin spec="https://github.com/pushandplay/cordova-plugin-apprate.git#41d40d7" />
  <plugin name="com.cordova.plugins.sms" source="pgb" spec="0.1.2" />
  <plugin name="cordova-plugin-admobpro" spec="2.19.1" />
  <plugin name="cordova-plugin-whitelist" spec="1.2.2" />
  <plugin name="cordova-plugin-x-toast" spec="2.5.2" />
  <plugin name="de.appplant.cordova.plugin.email-composer" source="pgb" spec="0.8.2" />
  <plugin name="nl.x-services.plugins.socialsharing" spec="5.1.1" />
  <plugin name="onesignal-cordova-plugin" spec="1.12.6" />
  <plugin name="org.apache.cordova.console" spec="1.0.3" />
  <plugin name="org.apache.cordova.device" spec="1.1.2" />
  <plugin name="org.apache.cordova.inappbrowser" spec="1.4.0" />
  <plugin name="org.apache.cordova.splashscreen" spec="3.2.2" />
  
  <icon src="icon.png"/>
  <splash src="screen.png" />
  
  <icon src="icon.png" platform="android" qualifier="ldpi"/>
  <icon src="icon.png" platform="android" qualifier="mdpi"/>
  <icon src="icon.png platform="android" qualifier="hdpi"/>
  <icon src="icon.png" platform="android" qualifier="xhdpi"/>
  <icon src="icon.png" platform="blackberry"/>
  <icon src="icon.png" platform="blackberry" state="hover"/>
  <icon src="icon.png" platform="ios" width="57" height="57"/>
  <icon src="icon.png" platform="ios" width="72" height="72"/>
  <icon src="icon.png" platform="ios" width="114" height="114"/>
  <icon src="icon.png" platform="ios" width="144" height="144"/>
  <icon src="icon.png" platform="webos"/>
  <icon src="icon.png" platform="winphone"/>
  <icon src="icon.png" platform="winphone" role="background"/>
  <splash src="screen.png" platform="android" qualifier="port-ldpi"/>
  <splash src="screen.png" platform="android" qualifier="port-mdpi"/>
  <splash src="screen.png" platform="android" qualifier="port-hdpi"/>
  <splash src="screen.png" platform="android" qualifier="port-xhdpi"/>
  <splash src="screen.png" platform="blackberry"/>
  <splash src="screen.png" platform="ios" width="320" height="480"/>
  <splash src="screen.png" platform="ios" width="640" height="960"/>
  <splash src="screen.png" platform="ios" width="640" height="1136"/>
  <splash src="screen.png" platform="ios" width="768" height="1024"/>
  <splash src="screen.png" platform="ios" width="1024" height="768"/>
  <splash src="screen.png" platform="winphone"/>  
	
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>    
</widget>